extends ../base.pug

block content 
  h4 Update video
  form(method="POST")
    input(name="title", placeholder="Video Title", value=video.title, required)
    input(placeholder="Description", type="text", name="description", minlength=20, value=video.description, required)
    input(placeholder="Hashtags, separated by comma.", type="text", name="hashtags", value=video.hashtags.join(), required)
    input(value="Save", type="submit")